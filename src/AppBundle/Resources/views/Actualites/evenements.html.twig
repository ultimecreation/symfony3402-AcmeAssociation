{% extends "base.html.twig" %}

{% block title %}{{title}}{% endblock %}

{% block body %}
<div class="container">
    <div class="row  ">
        <div class="col-lg-8 col-md-10 mx-auto text-center">
            <h1 >{{title}} </h1>
            <hr>
            {% for blog in blogs %}
            <div class="card shadow " >
                <div class="card-header">
                    <h4 class="card-title">{{blog.titre}} </h4>
                </div>
                {% if blog.image %}
                    <img class="card-img" src="{{ asset('')}}{{article_images}}/{{blog.image}} "alt="Card image">
                {% endif %}
                {% if blog.video %}
                <video controls>
                    <source src="{{ asset('')}}{{article_videos}}/{{blog.video}} ">
                    Your browser does not support HTML5 video.
                  </video>
               {% endif %}
                <div class="card-body">
                    <p class="card-text">{{blog.description|striptags|slice(0,100)|raw}}</p>
                    <a href="{{path('detail-article',{'id':blog.id} )}}" class="btn btn-primary form-control">Lire la suite</a>
                </div>
                <div class="card-footer">
                    {% if blog.other %}
                        <a href="{{asset('')}}{{article_files}}/{{blog.other}} " class="btn btn-primary form-control">Acc√©der au fichier</a>
                    {% endif %}
                </div>
            </div>
            <div class="d-flex justify-content-center mt-5">{{ knp_pagination_render(blogs) }}</div>
            <hr>
           
            <hr>
            {% endfor %}
           
            <hr>
            
        </div>
    </div>
</div>
{% endblock %}
