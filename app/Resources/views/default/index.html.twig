{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row  ">
        <div class="col-lg-8 col-md-10 mx-auto text-center">
            <h1 >{{title}} </h1>
            <hr>
            {% if articles %}
                {% for article in articles %}
                <div class="card shadow " >
                    <div class="card-header">
                        <h4 class="card-title">{{article.titre}} </h4>
                    </div>
                    {% if article.image %}
                        <img class="card-img img-fluid" src="{{ asset('')}}{{article_images}}/{{article.image}} "alt="Card image">
                    {% endif %}
                    {% if article.video %}
                    <video controls>
                        <source src="{{ asset('')}}{{article_videos}}/{{article.video}} ">
                        Your browser does not support HTML5 video.
                    </video>
                    
                    {% endif %}
                    <div class="card-body">
                        <p class="card-text">{{article.description|striptags|slice(0,100)|raw }}...</p>
                        <a href="{{path('detail-article',{'id':article.id} )}}" class="btn btn-primary form-control">Lire la suite</a>
                    </div>
                    <div class="card-footer">
                        {% if article.other %}
                            <a href="{{asset('')}}{{article_files}}/{{article.other}} " class="btn btn-primary form-control">Acc√©der au fichier</a>
                        {% endif %}
                    </div>
                </div>
                <div class="d-flex justify-content-center mt-5">{{ knp_pagination_render(articles) }}</div>
                <hr>
                
                {% endfor %}
            {% else %}

            {% endif %}
            
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}

{% endblock %}